{% extends 'base.html.twig' %}

{% block title %}Proposer un nouveau service{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 form-container">
                <div class="col-lg-8 col-md-12 col-10 form-box text-center">

                    {# Titre de la page de création #}
                    <div class="heading mb-5">
                        <h1 class="fs-1 text-light">Proposer un nouveau service</h1>
                    </div>

                    {# Formulaire de création, inclus des labels pour le nom, la description, et le secteur d'activité #}
                    {{ form_start(form) }}
                        {{ form_row(form.name, {
                            label: 'Nom',
                            label_attr: {
                                class: 'text-light fw-bold',
                            }
                        }) }}
                        {{ form_row(form.description, {
                            label: 'Décrivez votre service',
                            label_attr: {
                                class: 'text-light fw-bold',
                            }
                        }) }}
                        {{ form_row(form.sector, {
                            label: 'Secteur',
                            label_attr: {
                                class: 'text-light fw-bold',
                            }
                        }) }}
                    {# Bouton pour valider la création du service #}
                    <button class="btn btn-light mt-4 w-100" type="submit">Créer le service</button>
                    {{ form_end(form) }}
                    {# Annuler la création, qui redirige vers l'interface du client' #}
                    <a class="btn btn-secondary mt-4 w-100 d-block fw-bold" href="{{ path('service_interface') }}">Annuler</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}