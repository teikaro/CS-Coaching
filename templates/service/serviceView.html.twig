{% extends 'base.html.twig' %}

{# titre du document #}
{% block title %} {{ service.name }} {% endblock %}

{# Corps du document #}
{% block body %}

    <div class="container-fluid">
        <div class="row my-5">
            {# Titre principal de la page #}
            <h1 class="col-12 text-center">{{ service.name }}</h1>
        </div>

        <div class="row">
            <p class="text-center col-12 my-5">
                {# Si l'utilisateur est un consultant, affiche un lien vers son interface. Sinon, vers liste de projets #}
                {% if service.user == app.user %}
                    <a class="text-decoration-none fs-5" href="{{ path('service_interface') }}">Retour à l'interface</a>
                {% else %}
                    <a class="text-decoration-none fs-5" href="{{ path('service_list') }}">Retour au catalogue services</a>
                {% endif %}
            </p>
        </div>

        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">

                {# Carte du service #}
                <div class="card my-2 bg-light">

                    {# Corps du service #}
                    <div class="card-body">
                        {# Description du service #}
                        <div class="mb-2 fs-5">
                            {# Rendu description du projet filtré #}
                            {{ service.description|purify }}
                        </div>

                    </div>

                    <div class="row my-5">
                        {# Affichage du nom et prénom du créateur du service #}
                        <p class="text-start ps-5 mt-2 mb-4 fs-5 col-6">
                            {# Affiche nom et prénom de l'utilisateur #}
                            <span class="fw-bold">{{ service.user.firstName }} {{ service.user.lastName }}</span>
                        </p>

                        {# Affichage de la date de création du service #}
                        <p class="text-end pe-5 mt-2 mb-4 fs-5 col-6">
                            {# Date de création #}
                            Ajouté le <span class="fw-bold">{{ service.createdAt|date('d/m/Y à H\\hi') }}</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        {# Si l'utilisateur est un consultant, lui seul peut modifier ou supprimer ses services  #}
        {% if service.user == app.user %}
            <div class="row my-5">
                <div class="col-6 mx-auto d-flex justify-content-center">
                
                    {# Bouton de modification du service #}
                    <a href="{{ path('service_edit', {'slug': service.slug}) }}" class="btn btn-warning me-3 d-inline-block" style="width: 150px">
                        <i class="fas fa-edit me-1"></i> Modifier
                    </a>

                    {# bouton de suppression du service #}
                    <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?')" class="btn btn-danger ms-3 d-inline-block" style="width: 150px" href="{{ path('service_delete', {'id': service.id, csrf_token: csrf_token('service_delete_' ~ service.id ) }) }}">
                        <i class="fas fa-trash-alt me-1"></i> Supprimer
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}



