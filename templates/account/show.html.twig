{% extends 'base.html.twig' %}

{% block title %}Gestion du compte{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row mb-5">
            <div class="text-center p-0">

                {# Menu de gestion de compte #}
                <nav class="py-2 bg-custom-celadon w-100">

                    <ul class="list-unstyled d-flex justify-content-center">

                        {# Lien uniquement pour les clients et consultants #}
                        

                            <li class="mx-3"><a href="{{ path('account_profile', {'id': app.user.id}) }}" class="btn btn-outline-light text-decoration-none">Voir le profil public</a></li>



                        {# Lien uniquement pour les clients #}


                            <li class="mx-3"><a href="{{ path('project_interface') }}" class="btn btn-outline-light text-decoration-none">Accéder à l'interface client</a></li>



                        {# Lien uniquement pour les consultants #}


                            <li class="mx-3"><a href="{{ path('service_interface') }}" class="btn btn-outline-light text-decoration-none">Accéder à l'interface consultant</a></li>



                    </ul>
                </nav>

            </div>
        </div>

        {# Titre principal de la page #}
        <div class="row my-5">
            <h1 class="text-center">Informations du compte</h1>
        </div>

        {# Titre secondaire de la page reprenant l'identité de l'utilisateur #}
        <div class="row my-3">
            <h2 class="text-center">{{ app.user.firstName }} {{ app.user.lastName }}</h2>
        </div>

        {# Affichage de la photo de profil #}
        <div class="row my-5">
            <div class="col-12 text-center">
                {# Contrôle si l'utilisateur a une photo ou pas #}
                {% if app.user.photos %}
                    <p class="fs-4 my-2">Photo de profil: </p>
                    <div>
                        <img src="{{ app.user.photos|imagine_filter('show_picture') }}" class="img-fluid img-thumbnail profil-picture" alt="">
                    </div>
                {% else %}
                    <p class="fs-4 my-2">Photo de profil: </p>
                    <div>
                        <img src="{{ asset('images/Portrait_Placeholder.png')|imagine_filter('show_picture') }}" class="img-fluid img-thumbnail profil-picture" alt="">
                    </div>
                {% endif %}
            </div>
        </div>

        {# Informations du compte #}
        <div class="row my-5">

            <div class="col-12 text-center">

                <ul class="list-unstyled">

                    {# Affichage de l'adresse e-mail #}
                    <li class="fs-4 my-2">Adresse e-mail: {{ app.user.email }}</li>

                    {# Contrôle si l'utilisateur a un numéro de téléphone ou pas #}
                    {% if app.user.phone %}

                        <li class="fs-4 my-2">Téléphone: {{ app.user.phone }}</li>

                    {% else %}

                        <li class="fs-4 my-2">Téléphone: <span class="fst-italic">non renseigné</span></li>

                    {% endif %}

                </ul>

            </div>

        </div>

        <div class="row my-5">

            <div class="mx-auto text-center d-flex justify-content-center">

                <a href="{{ path('main_home') }}" class="btn btn-outline-success text-decoration-none px-4 mx-3"><i class="fas fa-caret-square-left pe-2"></i>Retour</a>

                <form method="post" action="{{ path('account_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte?');">

                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">

                    {# Lien pour la modification du compte #}
                    <p class="mx-3"><a href="{{ path('account_edit', {'id': app.user.id}) }}" class="btn btn-outline-info text-decoration-none">Modifier le profil</a></>

                    {# Lien pour la suppression du compte #}
                    <button class="btn btn-outline-danger w-md-50 mx-3"><i class="fas fa-trash-alt me-2"></i>Supprimer</button>

                </form>
            </div>
        </div>
    </div>

{% endblock %}